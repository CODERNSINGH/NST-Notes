enum AlignmentSelect {
  EVIL
  VILLIAN
}

model Hero {
  id             Int             @id @default(autoincrement())
  name           String
  secretIdentity String? // can be null
  alignment      AlignmentSelect
  hometownId     Int
  city           City            @relation(fields: [hometownId], references: [id])
}

model Power {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String
}

model City {
  id         Int    @id @default(autoincrement())
  name       String @unique
  population Int
  heros      Hero[]
}

model Student {
  id             Int         @id @default(autoincrement())
  name           String
  certificate_id Int         @unique
  certificate    Certificate @relation(fields: [certificate_id], references: [id])
}

model Certificate {
  id         Int      @id @default(autoincrement())
  type       String
  student_id Int      @unique
  student    Student?
}
